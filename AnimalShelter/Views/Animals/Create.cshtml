@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add New Amimal</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Type, "Animal Species:")
  @Html.TextBoxFor(model => model.Type)
  <br>
  @Html.LabelFor(model => model.Name, "Name:")
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Gender, "Gender:")
  @Html.TextBoxFor(model => model.Gender)
  <br>
  @Html.LabelFor(model => model.Breed, "Breed:")
  @Html.TextBoxFor(model => model.Breed)
  <br>
  @Html.LabelFor(model => model.DateArrival, "Date of Arrival:") 
  @Html.TextBoxFor(model => model.DateArrival)
  <br>
  <input type="submit" value="Add new Animal" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>